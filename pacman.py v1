# Build Pac-Man from Scratch in Python with PyGame!!
import copy
from board import boards
from level import Level
import pygame
import math

pygame.init()


class Ghost(object):
    def __init__(self, x_coord, y_coord, target, speed, img, direct, dead, box, id):
        self.x_pos = x_coord
        self.y_pos = y_coord
        self.center_x = self.x_pos + 22
        self.center_y = self.y_pos + 22
        self.target = target
        self.speed = speed
        self.img = img
        self.direction = direct
        self.dead = dead
        self.in_box = box
        self.id = id
        self.turns, self.in_box = self.check_collisions()
        self.rect = self.draw()

    def draw(self):
        if (not Level.powerup and not self.dead) or (Level.eaten_ghost[self.id] and Level.powerup and not self.dead):
            Level.screen.blit(self.img, (self.x_pos, self.y_pos))
        elif Level.powerup and not self.dead and not Level.eaten_ghost[self.id]:
            Level.screen.blit(Level.spooked_img, (self.x_pos, self.y_pos))
        else:
            Level.screen.blit(Level.dead_img, (self.x_pos, self.y_pos))
        ghost_rect = pygame.rect.Rect((self.center_x - 18, self.center_y - 18), (36, 36))
        return ghost_rect

    def check_collisions(self):
        # R, L, U, D
        num1 = ((Level.HEIGHT - 50) // 32)
        num2 = (Level.WIDTH // 30)
        num3 = 15
        self.turns = [False, False, False, False]
        if 0 < self.center_x // 30 < 29:
            if Level.level[(self.center_y - num3) // num1][self.center_x // num2] == 9:
                self.turns[2] = True
            if Level.level[self.center_y // num1][(self.center_x - num3) // num2] < 3 \
                    or (Level.level[self.center_y // num1][(self.center_x - num3) // num2] == 9 and (
                    self.in_box or self.dead)):
                self.turns[1] = True
            if Level.level[self.center_y // num1][(self.center_x + num3) // num2] < 3 \
                    or (Level.level[self.center_y // num1][(self.center_x + num3) // num2] == 9 and (
                    self.in_box or self.dead)):
                self.turns[0] = True
            if Level.level[(self.center_y + num3) // num1][self.center_x // num2] < 3 \
                    or (Level.level[(self.center_y + num3) // num1][self.center_x // num2] == 9 and (
                    self.in_box or self.dead)):
                self.turns[3] = True
            if Level.level[(self.center_y - num3) // num1][self.center_x // num2] < 3 \
                    or (Level.level[(self.center_y - num3) // num1][self.center_x // num2] == 9 and (
                    self.in_box or self.dead)):
                self.turns[2] = True

            if self.direction == 2 or self.direction == 3:
                if 12 <= self.center_x % num2 <= 18:
                    if Level.level[(self.center_y + num3) // num1][self.center_x // num2] < 3 \
                            or (Level.level[(self.center_y + num3) // num1][self.center_x // num2] == 9 and (
                            self.in_box or self.dead)):
                        self.turns[3] = True
                    if Level.level[(self.center_y - num3) // num1][self.center_x // num2] < 3 \
                            or (Level.level[(self.center_y - num3) // num1][self.center_x // num2] == 9 and (
                            self.in_box or self.dead)):
                        self.turns[2] = True
                if 12 <= self.center_y % num1 <= 18:
                    if Level.level[self.center_y // num1][(self.center_x - num2) // num2] < 3 \
                            or (Level.level[self.center_y // num1][(self.center_x - num2) // num2] == 9 and (
                            self.in_box or self.dead)):
                        self.turns[1] = True
                    if Level.level[self.center_y // num1][(self.center_x + num2) // num2] < 3 \
                            or (Level.level[self.center_y // num1][(self.center_x + num2) // num2] == 9 and (
                            self.in_box or self.dead)):
                        self.turns[0] = True

            if self.direction == 0 or self.direction == 1:
                if 12 <= self.center_x % num2 <= 18:
                    if Level.level[(self.center_y + num3) // num1][self.center_x // num2] < 3 \
                            or (Level.level[(self.center_y + num3) // num1][self.center_x // num2] == 9 and (
                            self.in_box or self.dead)):
                        self.turns[3] = True
                    if Level.level[(self.center_y - num3) // num1][self.center_x // num2] < 3 \
                            or (Level.level[(self.center_y - num3) // num1][self.center_x // num2] == 9 and (
                            self.in_box or self.dead)):
                        self.turns[2] = True
                if 12 <= self.center_y % num1 <= 18:
                    if Level.level[self.center_y // num1][(self.center_x - num3) // num2] < 3 \
                            or (Level.level[self.center_y // num1][(self.center_x - num3) // num2] == 9 and (
                            self.in_box or self.dead)):
                        self.turns[1] = True
                    if Level.level[self.center_y // num1][(self.center_x + num3) // num2] < 3 \
                            or (Level.level[self.center_y // num1][(self.center_x + num3) // num2] == 9 and (
                            self.in_box or self.dead)):
                        self.turns[0] = True
        else:
            self.turns[0] = True
            self.turns[1] = True
        if 350 < self.x_pos < 550 and 370 < self.y_pos < 480:
            self.in_box = True
        else:
            self.in_box = False
        return self.turns, self.in_box

    def move_clyde(self):
        # r, l, u, d
        # clyde is going to turn whenever advantageous for pursuit
        if self.direction == 0:
            if self.target[0] > self.x_pos and self.turns[0]:
                self.x_pos += self.speed
            elif not self.turns[0]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
            elif self.turns[0]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                if self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                else:
                    self.x_pos += self.speed
        elif self.direction == 1:
            if self.target[1] > self.y_pos and self.turns[3]:
                self.direction = 3
            elif self.target[0] < self.x_pos and self.turns[1]:
                self.x_pos -= self.speed
            elif not self.turns[1]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[1]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                if self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                else:
                    self.x_pos -= self.speed
        elif self.direction == 2:
            if self.target[0] < self.x_pos and self.turns[1]:
                self.direction = 1
                self.x_pos -= self.speed
            elif self.target[1] < self.y_pos and self.turns[2]:
                self.direction = 2
                self.y_pos -= self.speed
            elif not self.turns[2]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[2]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                else:
                    self.y_pos -= self.speed
        elif self.direction == 3:
            if self.target[1] > self.y_pos and self.turns[3]:
                self.y_pos += self.speed
            elif not self.turns[3]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[3]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                else:
                    self.y_pos += self.speed
        if self.x_pos < -30:
            self.x_pos = 900
        elif self.x_pos > 900:
            self.x_pos - 30
        return self.x_pos, self.y_pos, self.direction

    def move_blinky(self):
        # r, l, u, d
        # blinky is going to turn whenever colliding with walls, otherwise continue straight
        if self.direction == 0:
            if self.target[0] > self.x_pos and self.turns[0]:
                self.x_pos += self.speed
            elif not self.turns[0]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
            elif self.turns[0]:
                self.x_pos += self.speed
        elif self.direction == 1:
            if self.target[0] < self.x_pos and self.turns[1]:
                self.x_pos -= self.speed
            elif not self.turns[1]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[1]:
                self.x_pos -= self.speed
        elif self.direction == 2:
            if self.target[1] < self.y_pos and self.turns[2]:
                self.direction = 2
                self.y_pos -= self.speed
            elif not self.turns[2]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
            elif self.turns[2]:
                self.y_pos -= self.speed
        elif self.direction == 3:
            if self.target[1] > self.y_pos and self.turns[3]:
                self.y_pos += self.speed
            elif not self.turns[3]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
            elif self.turns[3]:
                self.y_pos += self.speed
        if self.x_pos < -30:
            self.x_pos = 900
        elif self.x_pos > 900:
            self.x_pos - 30
        return self.x_pos, self.y_pos, self.direction

    def move_inky(self):
        # r, l, u, d
        # inky turns up or down at any point to pursue, but left and right only on collision
        if self.direction == 0:
            if self.target[0] > self.x_pos and self.turns[0]:
                self.x_pos += self.speed
            elif not self.turns[0]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
            elif self.turns[0]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                if self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                else:
                    self.x_pos += self.speed
        elif self.direction == 1:
            if self.target[1] > self.y_pos and self.turns[3]:
                self.direction = 3
            elif self.target[0] < self.x_pos and self.turns[1]:
                self.x_pos -= self.speed
            elif not self.turns[1]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[1]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                if self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                else:
                    self.x_pos -= self.speed
        elif self.direction == 2:
            if self.target[1] < self.y_pos and self.turns[2]:
                self.direction = 2
                self.y_pos -= self.speed
            elif not self.turns[2]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[2]:
                self.y_pos -= self.speed
        elif self.direction == 3:
            if self.target[1] > self.y_pos and self.turns[3]:
                self.y_pos += self.speed
            elif not self.turns[3]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[3]:
                self.y_pos += self.speed
        if self.x_pos < -30:
            self.x_pos = 900
        elif self.x_pos > 900:
            self.x_pos - 30
        return self.x_pos, self.y_pos, self.direction

    def move_pinky(self):
        # r, l, u, d
        # inky is going to turn left or right whenever advantageous, but only up or down on collision
        if self.direction == 0:
            if self.target[0] > self.x_pos and self.turns[0]:
                self.x_pos += self.speed
            elif not self.turns[0]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
            elif self.turns[0]:
                self.x_pos += self.speed
        elif self.direction == 1:
            if self.target[1] > self.y_pos and self.turns[3]:
                self.direction = 3
            elif self.target[0] < self.x_pos and self.turns[1]:
                self.x_pos -= self.speed
            elif not self.turns[1]:
                if self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[1]:
                self.x_pos -= self.speed
        elif self.direction == 2:
            if self.target[0] < self.x_pos and self.turns[1]:
                self.direction = 1
                self.x_pos -= self.speed
            elif self.target[1] < self.y_pos and self.turns[2]:
                self.direction = 2
                self.y_pos -= self.speed
            elif not self.turns[2]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.target[1] > self.y_pos and self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[3]:
                    self.direction = 3
                    self.y_pos += self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[2]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                else:
                    self.y_pos -= self.speed
        elif self.direction == 3:
            if self.target[1] > self.y_pos and self.turns[3]:
                self.y_pos += self.speed
            elif not self.turns[3]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.target[1] < self.y_pos and self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[2]:
                    self.direction = 2
                    self.y_pos -= self.speed
                elif self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                elif self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
            elif self.turns[3]:
                if self.target[0] > self.x_pos and self.turns[0]:
                    self.direction = 0
                    self.x_pos += self.speed
                elif self.target[0] < self.x_pos and self.turns[1]:
                    self.direction = 1
                    self.x_pos -= self.speed
                else:
                    self.y_pos += self.speed
        if self.x_pos < -30:
            self.x_pos = 900
        elif self.x_pos > 900:
            self.x_pos - 30
        return self.x_pos, self.y_pos, self.direction


def draw_misc():
    score_text = Level.font.render(f'Score: {Level.score}', True, 'white')
    Level.screen.blit(score_text, (10, 920))
    if Level.powerup:
        pygame.draw.circle(Level.screen, 'blue', (140, 930), 15)
    for i in range(Level.lives):
        Level.screen.blit(pygame.transform.scale(Level.player_images[0], (30, 30)), (650 + i * 40, 915))
    if Level.game_over:
        pygame.draw.rect(Level.screen, 'white', [50, 200, 800, 300],0, 10)
        pygame.draw.rect(Level.screen, 'dark gray', [70, 220, 760, 260], 0, 10)
        gameover_text = Level.font.render('Game over! Space bar to restart!', True, 'red')
        Level.screen.blit(gameover_text, (100, 300))
    if Level.game_won:
        pygame.draw.rect(Level.screen, 'white', [50, 200, 800, 300],0, 10)
        pygame.draw.rect(Level.screen, 'dark gray', [70, 220, 760, 260], 0, 10)
        gameover_text = Level.font.render('Victory! Space bar to restart!', True, 'green')
        Level.screen.blit(gameover_text, (100, 300))


def check_collisions(scor, power, power_count, eaten_ghosts):
    num1 = (Level.HEIGHT - 50) // 32
    num2 = Level.WIDTH // 30
    if 0 < Level.player_x < 870:
        if Level.level[center_y // num1][center_x // num2] == 1:
            Level.level[center_y // num1][center_x // num2] = 0
            scor += 10
        if Level.level[center_y // num1][center_x // num2] == 2:
            Level.level[center_y // num1][center_x // num2] = 0
            scor += 50
            power = True
            power_count = 0
            eaten_ghosts = [False, False, False, False]
    return scor, power, power_count, eaten_ghosts


def draw_board():
    num1 = ((Level.HEIGHT - 50) // 32)
    num2 = (Level.WIDTH // 30)
    for i in range(len(Level.level)):
        for j in range(len(Level.level[i])):
            if Level.level[i][j] == 1:
                pygame.draw.circle(Level.screen, 'white', (j * num2 + (0.5 * num2), i * num1 + (0.5 * num1)), 4)
            if Level.level[i][j] == 2 and not Level.flicker:
                pygame.draw.circle(Level.screen, 'white', (j * num2 + (0.5 * num2), i * num1 + (0.5 * num1)), 10)
            if Level.level[i][j] == 3:
                pygame.draw.line(Level.screen, Level.color, (j * num2 + (0.5 * num2), i * num1),
                                 (j * num2 + (0.5 * num2), i * num1 + num1), 3)
            if Level.level[i][j] == 4:
                pygame.draw.line(Level.screen, Level.color, (j * num2, i * num1 + (0.5 * num1)),
                                 (j * num2 + num2, i * num1 + (0.5 * num1)), 3)
            if Level.level[i][j] == 5:
                pygame.draw.arc(Level.screen, Level.color, [(j * num2 - (num2 * 0.4)) - 2, (i * num1 + (0.5 * num1)), num2, num1],
                                0, Level.PI / 2, 3)
            if Level.level[i][j] == 6:
                pygame.draw.arc(Level.screen, Level.color,
                                [(j * num2 + (num2 * 0.5)), (i * num1 + (0.5 * num1)), num2, num1], Level.PI / 2, Level.PI, 3)
            if Level.level[i][j] == 7:
                pygame.draw.arc(Level.screen, Level.color, [(j * num2 + (num2 * 0.5)), (i * num1 - (0.4 * num1)), num2, num1], Level.PI,
                                3 * Level.PI / 2, 3)
            if Level.level[i][j] == 8:
                pygame.draw.arc(Level.screen, Level.color,
                                [(j * num2 - (num2 * 0.4)) - 2, (i * num1 - (0.4 * num1)), num2, num1], 3 * Level.PI / 2,
                                2 * Level.PI, 3)
            if Level.level[i][j] == 9:
                pygame.draw.line(Level.screen, 'white', (j * num2, i * num1 + (0.5 * num1)),
                                 (j * num2 + num2, i * num1 + (0.5 * num1)), 3)


def draw_player():
    # 0-RIGHT, 1-LEFT, 2-UP, 3-DOWN
    if Level.direction == 0:
        Level.screen.blit(Level.player_images[Level.counter // 5], (Level.player_x, Level.player_y))
    elif Level.direction == 1:
        Level.screen.blit(pygame.transform.flip(Level.player_images[Level.counter // 5], True, False), (Level.player_x, Level.player_y))
    elif Level.direction == 2:
        Level.screen.blit(pygame.transform.rotate(Level.player_images[Level.counter // 5], 90), (Level.player_x, Level.player_y))
    elif Level.direction == 3:
        Level.screen.blit(pygame.transform.rotate(Level.player_images[Level.counter // 5], 270), (Level.player_x, Level.player_y))


def check_position(centerx, centery):
    turns = [False, False, False, False]
    num1 = (Level.HEIGHT - 50) // 32
    num2 = (Level.WIDTH // 30)
    num3 = 15
    # check collisions based on center x and center y of player +/- fudge number
    if centerx // 30 < 29:
        if Level.direction == 0:
            if Level.level[centery // num1][(centerx - num3) // num2] < 3:
                turns[1] = True
        if Level.direction == 1:
            if Level.level[centery // num1][(centerx + num3) // num2] < 3:
                turns[0] = True
        if Level.direction == 2:
            if Level.level[(centery + num3) // num1][centerx // num2] < 3:
                turns[3] = True
        if Level.direction == 3:
            if Level.level[(centery - num3) // num1][centerx // num2] < 3:
                turns[2] = True

        if Level.direction == 2 or Level.direction == 3:
            if 12 <= centerx % num2 <= 18:
                if Level.level[(centery + num3) // num1][centerx // num2] < 3:
                    turns[3] = True
                if Level.level[(centery - num3) // num1][centerx // num2] < 3:
                    turns[2] = True
            if 12 <= centery % num1 <= 18:
                if Level.level[centery // num1][(centerx - num2) // num2] < 3:
                    turns[1] = True
                if Level.level[centery // num1][(centerx + num2) // num2] < 3:
                    turns[0] = True
        if Level.direction == 0 or Level.direction == 1:
            if 12 <= centerx % num2 <= 18:
                if Level.level[(centery + num1) // num1][centerx // num2] < 3:
                    turns[3] = True
                if Level.level[(centery - num1) // num1][centerx // num2] < 3:
                    turns[2] = True
            if 12 <= centery % num1 <= 18:
                if Level.level[centery // num1][(centerx - num3) // num2] < 3:
                    turns[1] = True
                if Level.level[centery // num1][(centerx + num3) // num2] < 3:
                    turns[0] = True
    else:
        turns[0] = True
        turns[1] = True

    return turns


def move_player(play_x, play_y):
    # r, l, u, d
    if Level.direction == 0 and Level.turns_allowed[0]:
        play_x += Level.player_speed
    elif Level.direction == 1 and Level.turns_allowed[1]:
        play_x -= Level.player_speed
    if Level.direction == 2 and Level.turns_allowed[2]:
        play_y -= Level.player_speed
    elif Level.direction == 3 and Level.turns_allowed[3]:
        play_y += Level.player_speed
    return play_x, play_y


def get_targets(blink_x, blink_y, ink_x, ink_y, pink_x, pink_y, clyd_x, clyd_y):
    if Level.player_x < 450:
        runaway_x = 900
    else:
        runaway_x = 0
    if Level.player_y < 450:
        runaway_y = 900
    else:
        runaway_y = 0
    return_target = (380, 400)
    if Level.powerup:
        if not blinky.dead and not Level.eaten_ghost[0]:
            blink_target = (runaway_x, runaway_y)
        elif not blinky.dead and Level.eaten_ghost[0]:
            if 340 < blink_x < 560 and 340 < blink_y < 500:
                blink_target = (400, 100)
            else:
                blink_target = (Level.player_x, Level.player_y)
        else:
            blink_target = return_target
        if not inky.dead and not Level.eaten_ghost[1]:
            ink_target = (runaway_x, Level.player_y)
        elif not inky.dead and Level.eaten_ghost[1]:
            if 340 < ink_x < 560 and 340 < ink_y < 500:
                ink_target = (400, 100)
            else:
                ink_target = (Level.player_x, Level.player_y)
        else:
            ink_target = return_target
        if not pinky.dead:
            pink_target = (Level.player_x, runaway_y)
        elif not pinky.dead and Level.eaten_ghost[2]:
            if 340 < pink_x < 560 and 340 < pink_y < 500:
                pink_target = (400, 100)
            else:
                pink_target = (Level.player_x, Level.player_y)
        else:
            pink_target = return_target
        if not clyde.dead and not Level.eaten_ghost[3]:
            clyd_target = (450, 450)
        elif not clyde.dead and Level.eaten_ghost[3]:
            if 340 < clyd_x < 560 and 340 < clyd_y < 500:
                clyd_target = (400, 100)
            else:
                clyd_target = (Level.player_x, Level.player_y)
        else:
            clyd_target = return_target
    else:
        if not blinky.dead:
            if 340 < blink_x < 560 and 340 < blink_y < 500:
                blink_target = (400, 100)
            else:
                blink_target = (Level.player_x, Level.player_y)
        else:
            blink_target = return_target
        if not inky.dead:
            if 340 < ink_x < 560 and 340 < ink_y < 500:
                ink_target = (400, 100)
            else:
                ink_target = (Level.player_x, Level.player_y)
        else:
            ink_target = return_target
        if not pinky.dead:
            if 340 < pink_x < 560 and 340 < pink_y < 500:
                pink_target = (400, 100)
            else:
                pink_target = (Level.player_x, Level.player_y)
        else:
            pink_target = return_target
        if not clyde.dead:
            if 340 < clyd_x < 560 and 340 < clyd_y < 500:
                clyd_target = (400, 100)
            else:
                clyd_target = (Level.player_x, Level.player_y)
        else:
            clyd_target = return_target
    return [blink_target, ink_target, pink_target, clyd_target]


run = True
while run:
    Level.timer.tick(Level.fps)
    if Level.counter < 19:
        Level.counter += 1
        if Level.counter > 3:
            Level.flicker = False
    else:
        Level.counter = 0
        Level.flicker = True
    if Level.powerup and Level.power_counter < 600:
        Level.power_counter += 1
    elif Level.powerup and Level.power_counter >= 600:
        Level.power_counter = 0
        Level.powerup = False
        Level.eaten_ghost = [False, False, False, False]
    if Level.startup_counter < 180 and not Level.game_over and not Level.game_won:
        Level.moving = False
        Level.startup_counter += 1
    else:
        Level.moving = True

    Level.screen.fill('black')
    draw_board()
    center_x = Level.player_x + 23
    center_y = Level.player_y + 24
    if Level.powerup:
        Level.ghost_speeds = [1, 1, 1, 1]
    else:
        Level.ghost_speeds = [2, 2, 2, 2]
    if Level.eaten_ghost[0]:
        Level.ghost_speeds[0] = 2
    if Level.eaten_ghost[1]:
        Level.ghost_speeds[1] = 2
    if Level.eaten_ghost[2]:
        Level.ghost_speeds[2] = 2
    if Level.eaten_ghost[3]:
        Level.ghost_speeds[3] = 2
    if Level.blinky_dead:
        Level.ghost_speeds[0] = 4
    if Level.inky_dead:
        Level.ghost_speeds[1] = 4
    if Level.pinky_dead:
        Level.ghost_speeds[2] = 4
    if Level.clyde_dead:
        Level.ghost_speeds[3] = 4

    Level.game_won = True
    for i in range(len(Level.level)):
        if 1 in Level.level[i] or 2 in Level.level[i]:
            Level.game_won = False

    player_circle = pygame.draw.circle(Level.screen, 'black', (center_x, center_y), 20, 2)
    draw_player()
    blinky = Ghost(Level.blinky_x, Level.blinky_y, Level.targets[0], Level.ghost_speeds[0], Level.blinky_img, Level.blinky_direction, Level.blinky_dead,
                   Level.blinky_box, 0)
    inky = Ghost(Level.inky_x, Level.inky_y, Level.targets[1], Level.ghost_speeds[1], Level.inky_img, Level.inky_direction, Level.inky_dead,
                 Level.inky_box, 1)
    pinky = Ghost(Level.pinky_x, Level.pinky_y, Level.targets[2], Level.ghost_speeds[2], Level.pinky_img, Level.pinky_direction, Level.pinky_dead,
                  Level.pinky_box, 2)
    clyde = Ghost(Level.clyde_x, Level.clyde_y, Level.targets[3], Level.ghost_speeds[3], Level.clyde_img, Level.clyde_direction, Level.clyde_dead,
                  Level.clyde_box, 3)
    draw_misc()
    Level.targets = get_targets(Level.blinky_x, Level.blinky_y, Level.inky_x, Level.inky_y, Level.inky_x, Level.pinky_y, Level.clyde_x, Level.clyde_y)

    Level.turns_allowed = check_position(center_x, center_y)
    if Level.moving:
        Level.player_x, Level.player_y = move_player(Level.player_x, Level.player_y)
        if not Level.blinky_dead and not blinky.in_box:
            Level.blinky_x, Level.blinky_y, Level.blinky_direction = blinky.move_blinky()
        else:
            Level.blinky_x, Level.blinky_y, Level.blinky_direction = blinky.move_clyde()
        if not Level.pinky_dead and not pinky.in_box:
            Level.pinky_x, Level.pinky_y, Level.pinky_direction = pinky.move_pinky()
        else:
            Level.pinky_x, Level.pinky_y, Level.pinky_direction = pinky.move_clyde()
        if not Level.inky_dead and not inky.in_box:
            Level.inky_x, Level.inky_y, Level.inky_direction = inky.move_inky()
        else:
            Level.inky_x, Level.inky_y, Level.inky_direction = inky.move_clyde()
        Level.clyde_x, Level.clyde_y, Level.clyde_direction = clyde.move_clyde()
    Level.score, Level.powerup, Level.power_counter, Level.eaten_ghost = check_collisions(Level.score, Level.powerup, Level.power_counter, Level.eaten_ghost)
    # add to if not Level.powerup to check if eaten ghosts
    if not Level.powerup:
        if (player_circle.colliderect(blinky.rect) and not blinky.dead) or \
                (player_circle.colliderect(inky.rect) and not inky.dead) or \
                (player_circle.colliderect(pinky.rect) and not pinky.dead) or \
                (player_circle.colliderect(clyde.rect) and not clyde.dead):
            if Level.lives > 0:
                Level.lives -= 1
                Level.startup_counter = 0
                Level.powerup = False
                Level.power_counter = 0
                Level.player_x = 450
                Level.player_y = 663
                Level.direction = 0
                Level.direction_command = 0
                Level.blinky_x = 56
                Level.blinky_y = 58
                Level.blinky_direction = 0
                Level.inky_x = 440
                Level.inky_y = 388
                Level.inky_direction = 2
                Level.pinky_x = 440
                Level.pinky_y = 438
                Level.pinky_direction = 2
                Level.clyde_x = 440
                Level.clyde_y = 438
                Level.clyde_direction = 2
                Level.eaten_ghost = [False, False, False, False]
                Level.blinky_dead = False
                Level.inky_dead = False
                Level.clyde_dead = False
                Level.pinky_dead = False
            else:
                Level.game_over = True
                Level.moving = False
                Level.startup_counter = 0
    if Level.powerup and player_circle.colliderect(blinky.rect) and Level.eaten_ghost[0] and not blinky.dead:
        if Level.lives > 0:
            Level.powerup = False
            Level.power_counter = 0
            Level.lives -= 1
            Level.startup_counter = 0
            Level.player_x = 450
            Level.player_y = 663
            Level.direction = 0
            Level.direction_command = 0
            Level.blinky_x = 56
            Level.blinky_y = 58
            Level.blinky_direction = 0
            Level.inky_x = 440
            Level.inky_y = 388
            Level.inky_direction = 2
            Level.pinky_x = 440
            Level.pinky_y = 438
            Level.pinky_direction = 2
            Level.clyde_x = 440
            Level.clyde_y = 438
            Level.clyde_direction = 2
            Level.eaten_ghost = [False, False, False, False]
            Level.blinky_dead = False
            Level.inky_dead = False
            Level.clyde_dead = False
            Level.pinky_dead = False
        else:
            Level.game_over = True
            Level.moving = False
            Level.startup_counter = 0
    if Level.powerup and player_circle.colliderect(inky.rect) and Level.eaten_ghost[1] and not inky.dead:
        if Level.lives > 0:
            Level.powerup = False
            Level.power_counter = 0
            Level.lives -= 1
            Level.startup_counter = 0
            Level.player_x = 450
            Level.player_y = 663
            Level.direction = 0
            Level.direction_command = 0
            Level.blinky_x = 56
            Level.blinky_y = 58
            Level.blinky_direction = 0
            Level.inky_x = 440
            Level.inky_y = 388
            Level.inky_direction = 2
            Level.pinky_x = 440
            Level.pinky_y = 438
            Level.pinky_direction = 2
            Level.clyde_x = 440
            Level.clyde_y = 438
            Level.clyde_direction = 2
            Level.eaten_ghost = [False, False, False, False]
            Level.blinky_dead = False
            Level.inky_dead = False
            Level.clyde_dead = False
            Level.pinky_dead = False
        else:
            Level.game_over = True
            Level.moving = False
            Level.startup_counter = 0
    if Level.powerup and player_circle.colliderect(pinky.rect) and Level.eaten_ghost[2] and not pinky.dead:
        if Level.lives > 0:
            Level.powerup = False
            Level.power_counter = 0
            Level.lives -= 1
            Level.startup_counter = 0
            Level.player_x = 450
            Level.player_y = 663
            Level.direction = 0
            Level.direction_command = 0
            Level.blinky_x = 56
            Level.blinky_y = 58
            Level.blinky_direction = 0
            Level.inky_x = 440
            Level.inky_y = 388
            Level.inky_direction = 2
            Level.pinky_x = 440
            Level.pinky_y = 438
            Level.pinky_direction = 2
            Level.clyde_x = 440
            Level.clyde_y = 438
            Level.clyde_direction = 2
            Level.eaten_ghost = [False, False, False, False]
            Level.blinky_dead = False
            Level.inky_dead = False
            Level.clyde_dead = False
            Level.pinky_dead = False
        else:
            Level.game_over = True
            Level.moving = False
            Level.startup_counter = 0
    if Level.powerup and player_circle.colliderect(clyde.rect) and Level.eaten_ghost[3] and not clyde.dead:
        if Level.lives > 0:
            Level.powerup = False
            Level.power_counter = 0
            Level.lives -= 1
            Level.startup_counter = 0
            Level.player_x = 450
            Level.player_y = 663
            Level.direction = 0
            Level.direction_command = 0
            Level.blinky_x = 56
            Level.blinky_y = 58
            Level.blinky_direction = 0
            Level.inky_x = 440
            Level.inky_y = 388
            Level.inky_direction = 2
            Level.pinky_x = 440
            Level.pinky_y = 438
            Level.pinky_direction = 2
            Level.clyde_x = 440
            Level.clyde_y = 438
            Level.clyde_direction = 2
            Level.eaten_ghost = [False, False, False, False]
            Level.blinky_dead = False
            Level.inky_dead = False
            Level.clyde_dead = False
            Level.pinky_dead = False
        else:
            Level.game_over = True
            Level.moving = False
            Level.startup_counter = 0
    if Level.powerup and player_circle.colliderect(blinky.rect) and not blinky.dead and not Level.eaten_ghost[0]:
        Level.blinky_dead = True
        Level.eaten_ghost[0] = True
        Level.score += (2 ** Level.eaten_ghost.count(True)) * 100
    if Level.powerup and player_circle.colliderect(inky.rect) and not inky.dead and not Level.eaten_ghost[1]:
        Level.inky_dead = True
        Level.eaten_ghost[1] = True
        Level.score += (2 ** Level.eaten_ghost.count(True)) * 100
    if Level.powerup and player_circle.colliderect(pinky.rect) and not pinky.dead and not Level.eaten_ghost[2]:
        Level.pinky_dead = True
        Level.eaten_ghost[2] = True
        Level.score += (2 ** Level.eaten_ghost.count(True)) * 100
    if Level.powerup and player_circle.colliderect(clyde.rect) and not clyde.dead and not Level.eaten_ghost[3]:
        Level.clyde_dead = True
        Level.eaten_ghost[3] = True
        Level.score += (2 ** Level.eaten_ghost.count(True)) * 100

    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_RIGHT:
                Level.direction_command = 0
            if event.key == pygame.K_LEFT:
                Level.direction_command = 1
            if event.key == pygame.K_UP:
                Level.direction_command = 2
            if event.key == pygame.K_DOWN:
                Level.direction_command = 3
            if event.key == pygame.K_SPACE and (Level.game_over or Level.game_won):
                Level.powerup = False
                Level.power_counter = 0
                Level.lives -= 1
                Level.startup_counter = 0
                Level.player_x = 450
                Level.player_y = 663
                Level.direction = 0
                Level.direction_command = 0
                Level.blinky_x = 56
                Level.blinky_y = 58
                Level.blinky_direction = 0
                Level.inky_x = 440
                Level.inky_y = 388
                Level.inky_direction = 2
                Level.pinky_x = 440
                Level.pinky_y = 438
                Level.pinky_direction = 2
                Level.clyde_x = 440
                Level.clyde_y = 438
                Level.clyde_direction = 2
                Level.eaten_ghost = [False, False, False, False]
                Level.blinky_dead = False
                Level.inky_dead = False
                Level.clyde_dead = False
                Level.pinky_dead = False
                Level.score = 0
                Level.lives = 3
                Level.level = copy.deepcopy(boards)
                Level.game_over = False
                Level.game_won = False

        if event.type == pygame.KEYUP:
            if event.key == pygame.K_RIGHT and Level.direction_command == 0:
                Level.direction_command = Level.direction
            if event.key == pygame.K_LEFT and Level.direction_command == 1:
                Level.direction_command = Level.direction
            if event.key == pygame.K_UP and Level.direction_command == 2:
                Level.direction_command = Level.direction
            if event.key == pygame.K_DOWN and Level.direction_command == 3:
                Level.direction_command = Level.direction

    if Level.direction_command == 0 and Level.turns_allowed[0]:
        Level.direction = 0
    if Level.direction_command == 1 and Level.turns_allowed[1]:
        Level.direction = 1
    if Level.direction_command == 2 and Level.turns_allowed[2]:
        Level.direction = 2
    if Level.direction_command == 3 and Level.turns_allowed[3]:
        Level.direction = 3

    if Level.player_x > 900:
        Level.player_x = -47
    elif Level.player_x < -50:
        Level.player_x = 897

    if blinky.in_box and Level.blinky_dead:
        Level.blinky_dead = False
    if inky.in_box and Level.inky_dead:
        Level.inky_dead = False
    if pinky.in_box and Level.pinky_dead:
        Level.pinky_dead = False
    if clyde.in_box and Level.clyde_dead:
        Level.clyde_dead = False

    pygame.display.flip()
pygame.quit()


# sound effects, restart and winning messages
